@using WordinOn.Models
@model Tema
@{
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                @Html.Label("lblNome", "Nome:", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", @style = "border-color: black" })
            </div>
        </div>
        <br />
    </div>
</div>

<div class="container" style="border-top: 2px solid black">
    <div class="row">
        <div class="col-md-12">
            @Html.Label("lblDescricao", "Descrição:", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
        </div>
    </div>
    <div class="row">
        @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @style = "border-color: black", @rows = "15"})
    </div>
    <div class="row">
        <div class="col-md-12 text-right" style="margin: 10px">
            <button type="submit" class="btn btn-default" name="btnSalvar" style = "border-color: black">Salvar</button>
            <button type="submit" class="btn btn-default" name="btnCancelar" style = "border-color: black">Câncer</button>
        </div>
    </div>
</div>

