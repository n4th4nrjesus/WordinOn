@using WordinOn.Models
@using WordinOn.WebUI.ViewModels
@model FiltroRedacaoViewModel
@{
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

<nav class="breadcrumb" style="background-color: lightgray; border: 2px solid black">
    @Html.Label("Professor > Temas", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<form class="form-horizontal" action="@Url.Action("ProcurarTema", "Professor")">
    <div class="row" style="border: 2px solid black;">
        <div class="col-md-4" style="border-right: 2px solid black; padding-top: 30px;">
            <div class="row">
                <div class="col-md-6 text-center">
                    <a class="btn btn-default" name="btnCriar" style="border-color: black" href="@Url.Action("CriarTema", "Professor")">Criar Novo Tema</a>
                </div>
            </div>
        </div>
        <div class="col-md-8" style="padding: 30px;">
            <div class="col-md-12">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.CampoTexto, string.Empty, new { @class = "form-control", @style = "border-color: black" })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default" style="border-color: black;">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="border-bottom: 2px solid black">
        <div class="col-md-6">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            @Html.Label("Temas Habilitados", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Tema item in ViewBag.ListaTemaH)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td>@item.Descricao</td>
                                <td>
                                    <a href="@Url.Action("DesabilitarTema", "Professor", new { @cod = item.Cod })">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: #0094ff"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            @Html.Label("Temas Desabilitados", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Tema item in ViewBag.ListaTemaD)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td>@item.Descricao</td>
                                <td>
                                    <a href="@Url.Action("HabilitarTema", "Professor", new { @cod = item.Cod })">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>