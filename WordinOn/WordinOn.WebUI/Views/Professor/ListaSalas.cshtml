@using WordinOn.Models
@using WordinOn.WebUI.ViewModels
@model FiltroSalaViewModel
@{
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

<nav class="breadcrumb" style="background-color: lightgray; border: 2px solid black">
    @Html.Label(" Professor > Salas", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<form class="form-horizontal" action="@Url.Action("BuscarSala", "Professor")">
    <div class="row" style="border: 2px solid black;">
        <div class="col-md-12" style="padding: 30px;">
            <div class="col-md-12">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.CampoTexto, string.Empty, new { @class = "form-control", @style = "border-color: black" })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default" style="border-color: black;">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="border-bottom: 2px solid black;">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Nome</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Salas ?? new List<Sala>())
                        {
                            <tr>
                                <td class="text-center">@item.Nome</td>
                                <td>
                                    <a href="@Url.Action("ListaRedacoesSala", "Professor", new { @cod = item.Cod })">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("CriarSala", "Professor", new { @cod = item.Cod })">
                                        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
