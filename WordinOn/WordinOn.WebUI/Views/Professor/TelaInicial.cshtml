@using WordinOn.Models
@using WordinOn.WebUI.ViewModels
@model FiltroRedacaoViewModel

@{
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

@*TERMINAR FUNÇÕES*@
<nav class="breadcrumb">
    <span class="breadcrumb-item active">Tela Inicial</span>
</nav>
<form class="form-horizontal" action="@Url.Action("ProcurarRedacao", "Professor")">
    <div class="row" style="border: 2px solid black">
        <div class="col-md-2" style="border-right: 2px solid black; padding: 20px">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.Sala.Cod, new SelectList(ViewBag.Salas ?? new List<Sala>(), "Cod", "Nome"), "-- [SELECIONE] --", new { @class = "form-control", @style = "border-color: black" })
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-default" name="btnAcessar" style="border-color: black">Acessar</button>
                </div>
            </div>
        </div>

        <div class="col-md-10" style="padding-top: 30px">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CampoTexto, string.Empty, new { @class = "form-control", @style = "border-color: black" })
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-default" name="btnVoltar" style="border: none">
                    <img alt="Brand" class="img-responsive" style="width: 30px; height: 30px" src="https://icon-icons.com/icons2/904/PNG/512/loupe_icon-icons.com_69633.png" />
                </button>
            </div>
        </div>
    </div>
</form>

<div class="row" style="border-bottom: 2px solid black">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome do Estudante</th>
                        <th>Tema</th>
                        <th>Data</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Redacao item in ViewBag.Redacoes ?? new List<Redacao>())
                    {
                        <tr>
                            <td>@item.Estudante.Nome</td>
                            <td>@item.Tema.Nome</td>
                            <td>@item.Data</td>
                            <td>
                                <a href="@Url.Action("AvaliacaoRedacao", "Professor", new { @cod = item.Cod })">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
