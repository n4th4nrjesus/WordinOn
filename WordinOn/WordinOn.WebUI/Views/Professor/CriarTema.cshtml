@using WordinOn.Models
@model Tema
@{
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

<nav class="breadcrumb" style="background-color: lightgray; border: 2px solid black">
    @Html.Label("Professor > Temas > Criar Tema", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<div class="container">
    <form action="@Url.Action("SalvarTema", "Professor")" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("lblNome", "Nome:", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @style = "border-color: black" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("lblDescricao", "Descrição:", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
                @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @style = "border-color: black", @rows = "15" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-right" style="margin: 10px">
                <button type="submit" class="btn btn-default" name="btnSalvar" style="border-color: black">Salvar</button>
                <button type="button" class="btn btn-default" name="btnCancelar" style="border-color: black">Cancelar</button>
            </div>
        </div>
    </form>
</div>