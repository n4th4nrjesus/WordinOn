@using WordinOn.Models
@using WordinOn.WebUI.ViewModels
@model FiltroRedacaoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb">
    @Html.Label("Estudante > Redações", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<form action="@Url.Action("ProcurarRedacao", "Estudante")" class="form-horizontal">
    <div class="row" style="border: 2px solid black">
        <div class="col-md-4" style="border-right: 2px solid black; padding: 20px">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.Sala.Cod, new SelectList(ViewBag.Salas ?? new List<Sala>(), "Cod", "Nome"), "Todas as salas", new { @class = "form-control", @style = "border-color: black" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.CheckBoxFor(m => m.RAvaliadas, new { @id = "chkRedacaoAvaliada" })
                    @Html.Label("Redações Avaliadas", new { @class = "control-label", @style = "font-weight: normal" })
                </div>
            </div>
        </div>

        <div class="col-md-8" style="padding-top: 30px">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CampoTexto, string.Empty, new { @class = "form-control", @style = "border-color: black" })
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-default" name="btnBuscar" style="border: none">
                    <img alt="Brand" class="img-responsive" style="width: 30px; height: 30px" src="https://icon-icons.com/icons2/904/PNG/512/loupe_icon-icons.com_69633.png" />
                </button>
            </div>
        </div>
    </div>
</form>

<div class="row" style="border-bottom: 2px solid black">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome do Estudante</th>
                        <th>Tema</th>
                        <th>Data</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Redacao item in ViewBag.Redacoes ?? new List<Redacao>())
                    {
                        <tr>
                            <td>@item.Estudante.Nome</td>
                            <td>@item.Tema.Nome</td>
                            <td>@item.Data</td>
                            <td>
                                <a href="@Url.Action("AcessoRedacao", "Estudante", new { @cod = item.Cod })">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
