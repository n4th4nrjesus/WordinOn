@using WordinOn.Models
@model Tuple<Sala, Redacao>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela Inicial</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="border: 2px solid black">
            <div class="col-md-4" style="border-right: 2px solid black; padding: 20px">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <div class="form-group">
                            @*@Html.DropDownListFor(Tuple => Tuple.Item1.Cod, new SelectList(ViewBag.Sala, "Cod", "Nome"), "-- [SELECIONE] --", new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-default" name="btnAcessar">Acessar</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        @Html.CheckBoxFor(Tuple => Tuple.Item2.RAvaliada)
                        @Html.LabelFor(Tuple => Tuple.Item2.RAvaliada, "Redações Avaliadas", new { @class = "control-label", @style = "font-weight: normal" })
                    </div>
                </div>
            </div>

            <div class="col-md-8" style="padding-top: 30px">
                <div class="col-md-10">
                    @Html.TextBoxFor(Tuple => Tuple.Item1.Nome, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-default" name="btnVoltar" style="border: none">
                        <img alt="Brand" class="img-responsive" style="width: 30px; height: 30px" src="https://icon-icons.com/icons2/904/PNG/512/loupe_icon-icons.com_69633.png" />
                    </button>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>