@using WordinOn.Models
@model Redacao

<div class="row" style="border-bottom: solid 2px black; padding: 15px">

    <div class="container">

        <div class="row">

            <div class="col-md-1">
                @Html.Label("lblTema", "Tema", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
            </div>

            <div class="col-md-9" style="border-right: solid 2px black">
                @Html.Label("lblTema", "Tema", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium; font-weight: normal" })

            </div>

            <div class="col-md-2">
                @Html.Label("lblTempo", "Tempo", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium" })
                @Html.Label("lblTime", "00:00:00", new { @class = "control-label", @style = "margin-top: 15px; font-size: medium; text-decoration: underline; font-weight: normal" })
            </div>

        </div>

    </div>

</div>

<div class="row" style="padding: 50px">

    <div class="col-md-2">
        <form class="form-horizontal">

            <div class="form-group">
                <div class="col-md-12">
                    @Html.DropDownList("ddlSala", new SelectList(ViewBag.Salas ?? new List<Sala>(), "Cod", "Nome"), "-- [SELECIONE] --", new { @class = "form-control", @style= "border-color: black" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" style="border-color: black" id="btnEnviar">Enviar</button>
                </div>
            </div>

            <div class="form-group" style="margin-top: 305px">
                <div class="col-md-12">
                    <button type="button" class="btn btn-default" style="border-color: black" id="btnCancelar">Cancelar</button>
                </div>
            </div>

        </form>
    </div>

    <div class="col-md-10">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextAreaFor(m => m.Texto, new { @class = "form-control", @style = "resize: none; height: 425px; border-radius: 10px; border-color: black; background-color: lightgray" })
                </div>
            </div>
        </form>
    </div>

</div>