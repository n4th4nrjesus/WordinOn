@using WordinOn.Models
@model Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb" style="background-color: lightgray; border: 2px solid black">
    @Html.Label("Estudante > Perfil", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<form action="@Url.Action("AlterarPerfil", "Estudante")" class="form-horizontal" autocomplete="off">
    <div class="container">
        @if (!string.IsNullOrWhiteSpace(ViewBag.ErroMsg))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Alerta!</strong> @ViewBag.ErroMsg
                    </div>
                </div>
            </div>
        }

        <div class="row" style="margin-bottom: 20px; margin-top: 20px">
            <div class="col-md-6">
                @Html.Label("lblNome", "Nome:", new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @style = "border-color: black" })
            </div>
        </div>

        <div class="row" style="margin-bottom: 20px">
            <div class="col-md-6">
                @Html.Label("lblSobrenome", "Sobrenome:", new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", @style = "border-color: black" })
            </div>
        </div>

        <div class="row" style="margin-bottom: 20px">
            <div class="col-md-6">
                @Html.Label("lblSenha", "Senha:", new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Senha, new { @type = "password", @class = "form-control", @style = "border-color: black" })
            </div>
        </div>

        <div class="row" style="margin-bottom: 20px">
            <div class="col-md-6">
                @Html.Label("lblEmail", "Email:", new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "border-color: black" })
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row text-right" style="padding: 20px">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary" name="btnSalvar" style="border-color: black">Salvar</button>
                <button type="button" class="btn btn-default" name="btnCancelar" style="border-color: black">Cancelar</button>
            </div>
        </div>
    </div>
</form>