@using WordinOn.Models
@model Redacao
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb" style="background-color: lightgray; border: 2px solid black">
    @Html.Label("Estudante > Acesso à Redação com Avaliação", new { @class = "control-label", @style = "font-weight: normal; font-size: larger" })
</nav>

<div class="row" style="border-bottom: solid 2px black; padding: 10px">
    <div class="container">
        <div class="col-md-3">
            @Html.Label("lblTema", string.Format("{0}", Model.Tema.Nome) + ": ", new { @class = "control-label", @style = "margin-bottom: 10px; font-size: medium" })
        </div>
        <div class="col-md-7" style="border-right: solid 2px black; margin-bottom: 10px;">
            @Html.Label("lblTemaDescricao", string.Format("{0}", Model.Tema.Descricao), new { @class = "control-label", @style = "font-size: medium; font-weight: normal" })
        </div>
        <div class="col-md-2">
            @Html.Label("lblTempo", "Tempo: ", new { @class = "control-label", @style = "margin-bottom: 10px; font-size: medium" })
            @Html.LabelFor(m => m.Duracao, Model.Duracao.ToString(), new { @class = "control-label", @style = "margin-bottom: 10px; font-size: medium; text-decoration: underline; font-weight: normal" })
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="padding: 50px">
        <div class="col-md-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("lblRedacao", string.Format("{0}", Model.Texto), new { @class = "form-control", @style = "resize: none; height: 425px; border-radius: 10px; border-color: black; background-color: lightgray" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@foreach (var avaliacao in Model.Avaliacoes)
{
    <div class="row" style="border: 2px solid black; padding: 20px">
        <div class="col-md-2" style="padding: 20px">
            <div class="col-md-4">
                <img alt="Brand" class="img-responsive" style="width: 30px; height: 30px" src="https://upload.wikimedia.org/wikipedia/commons/7/73/Bibeksheel-logo-final.png" />
            </div>
            <div class="col-md-8">
                @Html.Label("lblProfessor", "Professor: " + avaliacao.Professor.Nome, new { @class = "control-label", @style = "font-size: medium" })
            </div>
        </div>
        <div class="col-md-10" style="border-left: 2px solid black">
            <div class="col-md-9 text-center" style="border-right: solid 2px black">
                @Html.Label("lblAvaliacao", "Avaliacao: " + avaliacao.Texto, new { @class = "control-label", @style = "padding: 20px; font-size: medium" })
            </div>
            <div class="col-md-1 text-right">
                @Html.Label("lblNota", "Nota:", new { @class = "control-label", @style = "padding: 20px; font-size: medium" })
            </div>
            <div class="col-md-2 text-right" style="padding: 13px;">
                @Html.Label("txtNota", string.Format("{0}", avaliacao.Valor), new { @class = "form-control", @style = "border-color: black; width: 60px" })
            </div>
        </div>
    </div>
}
