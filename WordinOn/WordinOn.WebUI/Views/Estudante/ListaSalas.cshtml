@using WordinOn.Models
@model List<Sala>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="border: 2px solid black">
    <div class="col-md-12" style="padding-top: 30px">
        <div class="col-md-10">
            @Html.TextBox("txtBusca", string.Empty, new { @class = "form-control", @style = "border-color: black" })
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-default" name="btnBuscar" style="border: none">
                <img alt="Brand" class="img-responsive" style="width: 30px; height: 30px" src="https://icon-icons.com/icons2/904/PNG/512/loupe_icon-icons.com_69633.png" />
            </button>
        </div>
    </div>
</div>

<div class="row" style="border-bottom: 2px solid black">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome da sala</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Sala item in ViewBag.Salas ?? new List<Sala>())
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>
                                <a href="@Url.Action("ListaRedacoesSala", "Estudante", new { @cod = item.Cod })">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
